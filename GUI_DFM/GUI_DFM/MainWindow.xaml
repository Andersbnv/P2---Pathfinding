<Window x:Class="GUI_DFM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_DFM"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1400">
    <Grid>
        <ListBox Name="lstRoute" HorizontalAlignment="Left" Height="772" Margin="1000,0,0,0" VerticalAlignment="Top" Width="395"  SelectionChanged="Route_SelectionChanged_1">
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="Background" Value="#d9d9d9"/>
                    <Setter Property="Height" Value="50"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>


        <Canvas HorizontalAlignment="Left" Height="772" VerticalAlignment="Top" Width="1000" Background="#FF009ADA" Panel.ZIndex="-1">
            <Label x:Name="lblDriverName" Content="Alan Pedersen" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalAlignment="Top" Height="50" Width="400" FontSize="40" Foreground="White" FontFamily="Microsoft Sans Serif" FontWeight="Bold" Canvas.Left="300" Canvas.Top="179"/>
            <Label x:Name="lblRouteName" Content="Rute 17, Aalborg Øst" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalAlignment="Top" Height="47" Width="400" FontSize="20" FontWeight="Bold" Canvas.Left="300" Canvas.Top="234" Foreground="White"/>
            <Label x:Name="lblDate" Content="02/04/2019" HorizontalContentAlignment="Center" VerticalAlignment="Top" Height="41" Width="200" FontSize="20" FontWeight="Bold" Canvas.Left="400" Canvas.Top="319" Foreground="White"/>
            <Label x:Name="lblTime" Content="14:21" HorizontalContentAlignment="Center" VerticalAlignment="Top" Height="32" Width="200" FontSize="20" Canvas.Left="400" Canvas.Top="350" Foreground="White" FontWeight="Bold"/>
            <Button Name="btnAddPoint" Content="Tilføj punkt" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Click="BtnAddPoint_Click" Height="60" Canvas.Left="250" Canvas.Top="600" BorderBrush="White" Background="#FF009ADA" BorderThickness="4" FontSize="20" Foreground="White" FontWeight="Bold"/>
            <Button Name="btnRemovePoint" Content="Fjern punkt" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Click="BtnRemovePoint_Click" Height="60" Canvas.Right="250" Canvas.Top="600" Foreground="White" BorderBrush="White" Background="#FF009ADA" FontSize="20" BorderThickness="4" FontWeight="Bold"/>
        </Canvas>
    </Grid>
</Window>
